        <!--#endregion-->

    </Window.Resources>


    <Border Background="#232C33" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition />
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <Button Style="{DynamicResource adMenuStyle}" BorderBrush="Transparent" Width="60" Height="60" Click="menuBtn">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/menu.png" Stretch="None" />
                    </Button.Background>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">
                <Button Style="{DynamicResource categoryStyle}" x:Name="Category" BorderBrush="Transparent" Width="60" Height="60" Margin="0,0,0,50" MouseEnter="Category_MouseEnter" MouseLeave="Category_MouseLeave" Click="salesBtn">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons/register.png" Stretch="None" />
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource itemStyle}" x:Name="Item" BorderBrush="Transparent" Width="60" Height="60"  Margin="0,0,0,50" MouseEnter="Item_MouseEnter" MouseLeave="Item_MouseLeave" Click="inventoryBtn">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/inventory.png" Stretch="None" />
                    </Button.Background>
                </Button>
                <Button Style="{DynamicResource inventoryStyle}" x:Name="Inventory" BorderBrush="Transparent" Width="60" Height="60" MouseEnter="Inventory_MouseEnter" MouseLeave="Inventory_MouseLeave" Click="accountsBtn">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/account.png" Stretch="None" />
                    </Button.Background>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" Margin="0,0,60,0" >
                <Image Source="Images/shop.png" Width="30"/>
                <TextBlock Text="geekware" FontWeight="SemiBold" Margin="10,0,0,0" FontFamily="Montserrat" FontSize="20" Foreground="#FAFAFA" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>


            <ContentControl Margin="-100,0,0,0" HorizontalContentAlignment="Left" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Content="{Binding}"/>

            <Popup x:Name="popup_uc" AllowsTransparency="True" HorizontalOffset="-5" VerticalOffset="-10">
                <Grid>
                    <local:popupUserCTRL x:Name="Header" Foreground="#FFEBEFF0"/>
                </Grid>
            </Popup>


        </Grid>
    </Border>
</Window>

