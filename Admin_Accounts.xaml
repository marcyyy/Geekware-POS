            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="60,0,0,0">

                <Button Style="{DynamicResource adMenuStyle}" BorderBrush="Transparent" Width="60" Height="60" Click="menuBtn">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/menu.png" Stretch="None" />
                    </Button.Background>
                </Button>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,0,0,0">
                    <TextBox Text="Search Employee..." Width="350" Height="45" Background="#FFEBEFF0" Padding="15,5,0,0"
                         FontFamily="Montserrat" FontSize="25" TextAlignment="Left" BorderBrush="Transparent"
                         FontWeight="Normal" FontStyle="Normal" TextDecorations="{x:Null}" TextWrapping="NoWrap"
                         HorizontalAlignment="Left" VerticalAlignment="Center" Name="searchTxt" KeyDown="searchBar">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="85,0,10,30" Height="35" VerticalAlignment="Bottom" >
                    <Border  BorderBrush="#59C173" BorderThickness="3"  CornerRadius="20 0 0 0" Width="60" >
                        <Button Style="{DynamicResource allSortStyle}"  Content="All" FontFamily="Montserrat" FontSize="15" 
                                Foreground="#FAFAFA" Background="Transparent"  FontWeight="Regular" BorderBrush="Transparent" Click="allAccounts"/>
                    </Border>

                    <Border  BorderBrush="#59C173" BorderThickness="3"  CornerRadius="0 0 0 0" Width="60" Margin="5,0,0,0">
                        <Button Style="{DynamicResource userSortStyle}"  Content="User" FontFamily="Montserrat" FontSize="15" 
                                Foreground="#FAFAFA" Background="Transparent"  FontWeight="Regular" BorderBrush="Transparent" Click="userAccounts" />
                    </Border>

                    <Border  BorderBrush="#59C173" BorderThickness="3"  CornerRadius="0 20 0 0" Width="80" Margin="5,0,0,0" >
                        <Button Style="{DynamicResource adminSortStyle}"  Content="Admin" FontFamily="Montserrat" FontSize="15"  Foreground="#FAFAFA" Background="Transparent"  FontWeight="Regular" BorderBrush="Transparent" Click="adminAccounts"/>
                    </Border>
                </StackPanel>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,60,30" >
                <Image Source="Images/shop.png" Width="35"/>
                <TextBlock Text="geekware" FontWeight="SemiBold" Margin="10,0,0,0" FontFamily="Montserrat" FontSize="25" Foreground="#FAFAFA" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Right" Margin="0,50,60,0">
                <Label x:Name="LiveTimeLabel" Content="%TIME%" Margin="0,5,0,0" FontWeight="Regular" FontFamily="Montserrat" FontSize="16" Foreground="#FAFAFA" HorizontalAlignment="Right" />
            </StackPanel>



            <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,30,0">
                <Border x:Name="border" Background="#FFEBEFF0" CornerRadius="10" Width="765" Height="580">
                    <DataGrid x:Name="accountsDatagrid" Margin="10" MaxColumnWidth="265" AlternatingRowBackground="#FFFAFAFA" 
                              ColumnHeaderHeight="25" ColumnWidth="100" SelectionChanged="accountsDatagrid_SelectionChanged" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Employee ID" Binding = "{Binding id}" Width="80"/>
                            <DataGridTextColumn Header="Employee Name" Binding = "{Binding name}" Width="150"/>
                            <DataGridTextColumn Header="Password" Binding = "{Binding password}" Width="90"/>
                            <DataGridTextColumn Header="Role" Binding = "{Binding role}" Width="70"/>
                            <DataGridTextColumn Header="Question" Binding = "{Binding question}" Width="180"/>
                            <DataGridTextColumn Header="Answer" Binding = "{Binding answer}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </StackPanel>

            <StackPanel Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0">
                <Border Background="#FFEBEFF0" CornerRadius="10" Width="370" Height="500">

                    <StackPanel Orientation="Vertical" Margin=" 20,30,20,25">

                        <StackPanel Orientation="Horizontal" >
                            <Image Source="Images/Label/lock.png" Width="20" Margin="5,0,0,0"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0"/>
                            <Label Content="Employee ID" FontFamily="Montseratt" FontSize="17"/>
                        </StackPanel>
                        <TextBox x:Name="idTxt" Text="" FontFamily="Montseratt" FontSize="17" Padding="5" Margin="0,5,0,0" Width="335" IsReadOnly="True"/>

                        <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                            <Image Source="Images/Label/user.png" Width="20" Margin="5,0,0,0"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0"/>
                            <Label Content="Employee Name" FontFamily="Montseratt" FontSize="17"/>
                        </StackPanel>
                        <TextBox x:Name="nameTxt" Text="" FontFamily="Montseratt" FontSize="17" Padding="5" Margin="0,5,0,0" Width="335" />

                        <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                            <Image Source="Images/Label/lock.png" Width="20" Margin="5,0,0,0"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0"/>
                            <Label Content="Password" FontFamily="Montseratt" FontSize="17"/>
                        </StackPanel>
                        <TextBox x:Name="passTxt" Text="" FontFamily="Montseratt" FontSize="17" Padding="5" Margin="0,5,0,0" Width="335"/>

                        <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                            <Image Source="Images/Label/auth.png" Width="20" Margin="5,0,0,0"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0"/>
                            <Label Content="Role" FontFamily="Montseratt" FontSize="17"/>
                        </StackPanel>
                        <ComboBox x:Name="roleCombobox" Text="" FontFamily="Montseratt" FontSize="17" Padding="5" Margin="0,5,0,0" Width="335">
                            <ComboBoxItem Content="User" />
                            <ComboBoxItem Content="Admin" />
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                            <Image Source="Images/Label/question.png" Width="20" Margin="5,0,0,0"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0"/>
                            <Label Content="Security Question" FontFamily="Montseratt" FontSize="17"/>
                        </StackPanel>
                        <ComboBox x:Name="questionCombobox" Text="" FontFamily="Montseratt" FontSize="17" Padding="5" Margin="0,5,0,0" Width="335">
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" Margin="0,7,0,0">
                            <Image Source="Images/Label/answer.png" Width="20" Margin="5,0,0,0"/>
                            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5,0,5,0"/>
                            <Label Content="Answer" FontFamily="Montseratt" FontSize="17"/>
                        </StackPanel>
                        <TextBox x:Name="answerTxt" Text="" FontFamily="Montseratt" FontSize="17" Padding="5" Margin="0,5,0,0" Width="335"/>

                    </StackPanel>

                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0">
                <Border Background="#92999a" CornerRadius="20" Width="250" Height="60">
                    <Button x:Name="confirmBtn" Style="{DynamicResource confirmBtn}" Content="Confirm" FontFamily="Montserrat" FontSize="30"  Foreground="#FAFAFA" Background="Transparent"  FontWeight="SemiBold" BorderBrush="Transparent" Click="insertBtn"/>
                </Border>
                <Border Background="Transparent" CornerRadius="20" Width="50" Height="50" Margin="10,0,0,0">
                    <Button Style="{DynamicResource delStyle}" FontWeight="SemiBold" BorderBrush="Transparent" Click="deleteBtn">
                        <Button.Background>
                            <ImageBrush ImageSource="Images/Icons2/delete.png" Stretch="None" />
                        </Button.Background>
                    </Button>
                </Border>
                <Button Style="{DynamicResource refreshStyle}" BorderBrush="Transparent" Width="50" Height="50" Click="refreshBtn" Margin="10,0,0,0">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/refresh.png" Stretch="None" />
                    </Button.Background>
                </Button>
            </StackPanel>

            <Popup x:Name="popup_uc" AllowsTransparency="True" HorizontalOffset="-5" VerticalOffset="-10">
                <Grid>
                    <local:popupUserCTRL x:Name="Header" Foreground="#FFEBEFF0"/>
                </Grid>
            </Popup>


        </Grid>
    </Border>
</Window>
