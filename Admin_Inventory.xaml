            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition />
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <Button Style="{DynamicResource adMenuStyle}" BorderBrush="Transparent" Width="60" Height="60" Click="menuBtn">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/menu.png" Stretch="None" />
                    </Button.Background>
                </Button>
            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">
                <Button Style="{DynamicResource inventoryStyle}" x:Name="Inventory" BorderBrush="Transparent" Margin="0,0,0,50" Width="60" Height="60" Click="inventoryBtn" MouseEnter="Inventory_MouseEnter" MouseLeave="Inventory_MouseLeave">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/movement.png" Stretch="None" />
                    </Button.Background>
                </Button>

                <Button Style="{DynamicResource inventoryUpdateStyle}" x:Name="inventoryUpdate" BorderBrush="Transparent" Margin="0,0,0,50" Width="60" Height="60" MouseEnter="InventoryUpdate_MouseEnter" Click="inventoryUpdateBtn" MouseLeave="InventoryUpdate_MouseLeave">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/updateInventory.png" Stretch="None" />
                    </Button.Background>
                </Button>

                <Button Style="{DynamicResource itemStyle}" x:Name="Item" BorderBrush="Transparent" Width="60" Height="60" Click="itemBtn"  Margin="0,0,0,50" MouseEnter="Item_MouseEnter" MouseLeave="Item_MouseLeave">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/item.png" Stretch="None" />
                    </Button.Background>
                </Button>

                <Button Style="{DynamicResource categoryStyle}" x:Name="Category" BorderBrush="Transparent" Width="60" Height="60" Click="categoryBtn" Margin="0,0,0,0" MouseEnter="Category_MouseEnter" MouseLeave="Category_MouseLeave">
                    <Button.Background>
                        <ImageBrush ImageSource="Images/Icons2/category.png" Stretch="None" />
                    </Button.Background>
                </Button>
            </StackPanel>

            <ContentControl Margin="-100,0,0,0" HorizontalContentAlignment="Left" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" Content="{Binding}"/>

            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,60,30" >
                <Image Source="/Images/shop.png" Width="35"/>
                <TextBlock Text="geekware" FontWeight="SemiBold" Margin="10,0,0,0" FontFamily="Montserrat" FontSize="25" Foreground="#FAFAFA" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" HorizontalAlignment="Right" Margin="0,50,60,0">
                <Label Name="LiveTimeLabel" Content="%TIME%" Margin="0,5,0,0" FontWeight="Regular" FontFamily="Montserrat" FontSize="16" Foreground="#FAFAFA" HorizontalAlignment="Right" />
            </StackPanel>


            <Popup x:Name="popup_uc" AllowsTransparency="True" HorizontalOffset="-5" VerticalOffset="-10">
                <Grid>
                    <local:popupUserCTRL x:Name="Header" Foreground="#FFEBEFF0"/>
                </Grid>
            </Popup>


        </Grid>
    </Border>
</Window>

